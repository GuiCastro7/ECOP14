#stdio.c#

#include "stdio.h"
#include "lcd.h"

void printf(char msg[32]) {
    char i;
    lcdCommand(0x80);
    for (i = 0; i < 31; i++) {
        if (msg[i] == '\0') {
            return;
        } 
        else if(msg[i] == '\n'){
                lcdCommand(0xC0);
        }
        else{
            
            lcdData(msg[i]);
        }
    }
 }
    
