#include "delay.h"

void tempo(unsigned char x){
 
    
    volatile unsigned char i,j, k;
    
    for (i = 0; i < x; i++) {
        for (j = 0; j < 41; j++) {
            for (k = 0; k < 3; k++);
        }                     
    }
}

