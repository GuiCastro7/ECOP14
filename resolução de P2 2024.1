#include "pic18f4520.h"
#include "config.h"
#include "lcd.h"
#include "serial.h"


void main(void) {
lcdInit();
serialInit();
BitSet(PORTA,0);

unsigned int cont = 0;

    for(;;){
        lcdCommand(0x80);
        if(BitTst(PORTA,0)){
            cont++;
            while(BitTst(PORTA, 0));
        }
        lcdData(((cont/1000) %10)+ 48);
        lcdData(((cont/100) %10)+ 48);
        lcdData(((cont/10) %10)+ 48);
        lcdData((cont % 10) + 48);
        
        serialSend((cont/1000) %10);
        serialSend((cont/100) %10);
        serialSend((cont/10) %10);
        serialSend(cont % 10);
        
        if(cont == 10000){
            cont = 0;
        }
    }
}


